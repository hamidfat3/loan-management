@model List<LoanManagement.Models.Payment>

@{
    ViewData["Title"] = "پرداخت‌ها";
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پرداخت‌ها</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f5f5f5;
            font-family: 'Tahoma', sans-serif;
            direction: rtl;
            text-align: right;
        }
        .container {
            margin-top: 50px;
            margin-bottom: 50px;
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
            color: #333;
        }
        .table {
            text-align: center;
        }
        .table thead {
            background: #28a745;
            color: white;
        }
        .btn-back {
            display: block;
            width: 200px;
            margin: 20px auto;
            background: #ff4b2b;
            color: white;
            padding: 10px;
            text-align: center;
            border-radius: 10px;
            text-decoration: none;
            font-weight: bold;
            transition: 0.3s;
        }
        .btn-back:hover {
            background: #d43f00;
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>پرداخت‌های انجام‌شده</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>شناسه پرداخت</th>
                    <th>نوع پرداخت</th>
                    <th>مبلغ پرداختی</th>
                    <th>کد ملی پرداخت‌کننده</th>
                    <th>تاریخ پرداخت</th>
                    <th>توضیحات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td>@payment.Id</td>
                        <td>@payment.PaymentType</td>
                        <td>@payment.PaymentAmount</td>
                        <td>@payment.NationalIdPayer</td>
                        <td>@payment.PayDate</td>
                        <td>@payment.Note</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("Dashboard", "Account")" class="btn-back">بازگشت به داشبورد</a>
    </div>
</body>
</html>
