@model List<LoanManagement.Models.Loan>

@{
    ViewData["Title"] = "وام‌ها";
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>وام‌های دریافت‌شده</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f5f5f5;
            font-family: 'Tahoma', sans-serif;
            direction: rtl;
            text-align: right;
        }
        .container {
            margin-top: 50px;
            margin-bottom: 50px;
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
            color: #333;
        }
        .table {
            text-align: center;
        }
        .table thead {
            background: #007bff;
            color: white;
        }
        .btn-back {
            display: block;
            width: 200px;
            margin: 20px auto;
            background: #ff4b2b;
            color: white;
            padding: 10px;
            text-align: center;
            border-radius: 10px;
            text-decoration: none;
            font-weight: bold;
            transition: 0.3s;
        }
        .btn-back:hover {
            background: #d43f00;
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>وام‌های دریافت‌شده</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>شناسه وام</th>
                    <th>کد ملی دریافت‌کننده</th>
                    <th>تاریخ پرداخت</th>
                    <th>مبلغ وام</th>
                    <th>تعداد اقساط</th>
                    <th>کارمزد</th>
                    <th>اقساط باقی‌مانده</th>
                    <th>مبلغ باقی‌مانده</th>
                    <th>وضعیت پرداخت</th>
                    <th>توضیحات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loan in Model)
                {
                    <tr>
                        <td>@loan.LoanId</td>
                        <td>@loan.ReceiverNationalId</td>
                        <td>@loan.PayDate</td>
                        <td>@loan.LoanAmount</td>
                        <td>@loan.InstallmentsNum</td>
                        <td>@loan.Fee</td>
                        <td>@loan.RemainingInstallments</td>
                        <td>@loan.RemainingAmount</td>
                        <td>@(loan.Paid ? "پرداخت شده" : "پرداخت نشده")</td>
                        <td>@loan.Note</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("Dashboard", "Account")" class="btn-back">بازگشت به داشبورد</a>
    </div>
</body>
</html>
